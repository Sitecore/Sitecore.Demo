<?xml version="1.0"?>

<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <events>
      <event name="publish:end">
        <handler type="Sitecore.Publishing.HtmlCacheClearer, Sitecore.Kernel" method="ClearCache">
          <sites hint="list">
            <site hint="utilities">utilities</site>
          </sites>
        </handler>
      </event>
      <event name="publish:end:remote">
        <handler type="Sitecore.Publishing.HtmlCacheClearer, Sitecore.Kernel" method="ClearCache">
          <sites hint="list">
            <site hint="utilities">utilities</site>
          </sites>
        </handler>
      </event>
    </events>
    <sites>
      <site name="utilities" patch:before="site[@name='habitat']" 
            hostName="utilities" 
            targetHostName="utilities.$(rootHostName)" 
            scheme="http" 
            database="web" 
            virtualFolder="/" 
            physicalFolder="/" 
            rootPath="/sitecore/content/utilities" 
            startItem="/Home" 
            dictionaryPath="/sitecore/content/utilities/global/dictionary" 
            domain="utilities" 
            allowDebug="true" 
            cacheHtml="true" 
            htmlCacheSize="50MB" 
            registryCacheSize="0" 
            viewStateCacheSize="0" 
            xslCacheSize="25MB" 
            filteredItemsCacheSize="10MB" 
            enablePreview="true" 
            enableWebEdit="true" 
            enableDebugger="true" 
            disableClientData="false" 
            cacheRenderingParameters="true" 
            renderingParametersCacheSize="10MB" 
            formsRoot="/sitecore/system/Modules/Web Forms for Marketers/utilities" />
    </sites>
    <cacheSizes>
      <sites>
        <utilities>
          <html>50MB</html>
          <registry>0</registry>
          <viewState>0</viewState>
          <xsl>25MB</xsl>
        </utilities>
      </sites>
    </cacheSizes>
    <!--
      <settings>
        <setting name="Preview.DefaultSite" value="utilities" />
      </settings>
    -->
  </sitecore>
</configuration>